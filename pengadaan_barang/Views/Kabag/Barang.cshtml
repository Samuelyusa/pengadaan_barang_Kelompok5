 <div class="card shadow mb-4" mt-4>
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Daftar Barang</h6>
    </div>
    
        <!-- Button trigger modal insert gajadi, grgr dalam satu layout cuman bisa make 1 model aja -->
@*        <button type="button" class="btn btn-primary mb-4" data-toggle="modal" data-target="#staticBackdrop">
         Tambah Data Barang
        </button>*@
        <!-- Button trigger modal insert -->
        <a asp-action="CreateBarang">
            <div>
            <button type="button" class="btn btn-primary ml-4 mt-2 mb-2">
                Tambah Data Barang
            </button>
            </div>
        </a>

<div class="card-body ">
                <table class="table table-bordered table-striped" id="MyTableBarang">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Barang</th>
                    <th scope="col">Persediaan</th>
                    <th scope="col">Satuan</th>
                    <th scope="col">Harga</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
                <tbody id="tbodySW">
            </tbody>
        </table>
    </div>

        <!-- Modal Edit Data Barang -->
        <div class="modal fade" id="editBarang" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ubah Data Pemasok</h5>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formedit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input id="UpdateIdProduct" type="hidden" class="form-control" />

                            <div class="form-group">
                                <label class="control-label">Nama Barang</label>
                                <input id="UpdateNamaProduct" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Jumlah Persediaan</label>
                                <input id="UpdateStockProduct" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Satuan</label>
                                <input id="UpdateSatuanProduct" class="form-control" disabled />
                            </div>
                            <input id="UpdateSatuanProductId" type="hidden" class="form-control" />
                            <div class="form-group">
                                <label class="control-label">Harga Barang</label>
                                <input id="UpdateHargaProduct" class="form-control"/>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <input type="button" onclick="updateBarang()" value="Perbarui" class="btn btn-success" data-dismiss="modal" />
                                    <button type="button" data-dismiss="modal" class="btn btn-danger">Kembali</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

</div>



